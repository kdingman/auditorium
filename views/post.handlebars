<section class="container is-flex is-flex-direction-column mt-6 mb-6">
  <div class="has-text-centered">
    <h1 class="title has-text-info">View Post</h1>
</section>

<section class="content is-flex is-flex-direction-column is-align-items-center mb-6">
  {{> cards post}}

  {{#if loggedIn}}
    <form class="comment-form">
      <div>
        <textarea class="textarea" name="comment-body" placeholder="Enter comment here"></textarea>
      </div>
      <div>
        <button class="button is-info" type="submit">Add Comment</button>
      </div>
    </form>
  {{/if}}

    {{> comments post.comments}}

</section>