<article class="post">
  <div class="title">
    <a href="{{post_url}}" target="_blank">{{title}}</a>
  </div>
  <div class="meta">
    by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>

<article class="message is-dark">
  <div class="message-header">
    <p>{{post.title}} by {{user.username}}</p>
    {{#if loggedIn}} 
    <button class="delete" aria-label="delete"></button>
    {{/if}} 
  </div>
  <div class="message-body">
    {{post.content}}
    {{comments.length}}
  </div>
</article>